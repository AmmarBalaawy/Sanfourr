@model Knowledge_Of_Univarsity.Models.Major
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Details";
}
<div class="header">
    <h1 style="text-align:center">@Html.DisplayFor(model => model.Name)</h1>
</div>
<div style="margin:30px;display:flex; justify-content:center;">
    <img src="~/@Model.images" />
</div>
<article class="my-3" style="direction:rtl">
    <div class="cont">
        <div class="bd-example">
            <div class="accordion">
                <div class="accordion-item">
                    <h4 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                            معلومات عامه
                        </button>
                    </h4>
                    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="bd-example">
            <div class="accordion">
                <div class="accordion-item">
                    <h4 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            مواصفت الشخص
                        </button>
                    </h4>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            @Html.DisplayFor(model => model.PersonSpecifications)
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="bd-example">
            <div class="accordion">
                <div class="accordion-item">
                    <h4 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            مجالات العمل
                        </button>
                    </h4>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            @Html.DisplayFor(model => model.workfields)
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="bd-example">
            <div class="accordion">
                <div class="accordion-item">
                    <h4 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                            الدورات اللتي ينصح بها
                        </button>
                    </h4>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample" style="">
                        <div class="accordion-body">
                            @Html.DisplayFor(model => model.Courses)
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</article>


<div style="margin:10px;display:flex; justify-content:center;">
    
    <br />
    <a asp-action="Edit" asp-controller="Majors" asp-route-id="@Model.MajorId" class="btn btn-outline-warning">تعديل</a>
    <a asp-action="Delete" asp-controller="Majors" asp-route-id="@Model.MajorId" class="btn btn-outline-danger">حذف</a>

</div>
