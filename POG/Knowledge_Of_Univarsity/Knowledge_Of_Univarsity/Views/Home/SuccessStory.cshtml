@model IEnumerable<Knowledge_Of_Univarsity.Models.SuccessStory>
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="Create" asp-controller="SuccessStories" class="btn btn-outline-success">اضافة</a>
</p>
<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {

            <div class="col">
                <div class="ItemCard">
                    <div>
                        <h3 style="text-align:center;">@Html.DisplayFor(modelItem => item.Name)</h3>
                        <br>
                        <img src="~/@item.Images" width="100%" height="225">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-warning"><a style="color:black;text-decoration:none;" asp-action="Edit" asp-controller="SuccessStories" asp-route-id="@item.Id">تعديل</a></button>
                                    <button type="button" class="btn btn-outline-danger"><a style="color:black;text-decoration:none;" asp-action="Delete" asp-controller="SuccessStories" asp-route-id="@item.Id">حذف</a></button>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }

    </div>
</div>
