@model IEnumerable<Knowledge_Of_Univarsity.Models.College>
@{
    Layout = "_AdminLayout";
}

@{
    ViewData["Title"] = "Index";
}
<a asp-action="Create" asp-controller="Colleges" class="btn btn-outline-success">اضافة</a>

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var item in Model)
        {

            <div class="col">
                <div class="ItemCard">
                    <div>
                        <h3 style="text-align:center;">@Html.DisplayFor(modelItem => item.Name)</h3>
                        <br>
                        <img src="~/@item.img" width="100%" height="225">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-outline-primary"><a style="color:black;text-decoration:none;" asp-action="Major" asp-controller="Home" asp-route-id="@item.CollegeId">الاقسام</a></button>
                                    <button type="button" class="btn btn-outline-danger"><a style="color:black;text-decoration:none;" asp-action="Delete" asp-controller="colleges" asp-route-id="@item.CollegeId">حذف</a></button>
                                    <button type="button" class="btn btn-outline-warning"><a style="color:black;text-decoration:none;" asp-action="Edit" asp-controller="colleges" asp-route-id="@item.CollegeId">تعديل</a></button>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        }
    </div>
</div>
