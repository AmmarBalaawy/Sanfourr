@model Knowledge_Of_Univarsity.Models.College
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Details";
}
<a asp-action="Create" asp-controller="Majors" class="btn btn-outline-success">اضافة</a>
<div>
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">

        @foreach (var major in Model.majors)
        {
            <div class="col">
                <div class="ItemCard">
                    <div>
                        <img src="~/@major.images" width="100%" height="225">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">@Html.DisplayFor(Major => major.Name)</h4>
                        </div>
                        <div class="card-body">
                            <img src="" />
                            <button class="btn btn-outline-primary"><a style="color:black ;text-decoration:none;" asp-action="MajorDetails" asp-controller="Home" asp-route-id="@major.MajorId">معلومات القسم</a></button>
                            <button class="btn btn-outline-warning"><a style="color:black ;text-decoration:none;" asp-action="Edit" asp-controller="Majors" asp-route-id="@major.MajorId">تعديل</a></button>
                            <button class="btn btn-outline-danger"><a style="color: black ;text-decoration:none;" asp-action="Delete" asp-controller="Majors" asp-route-id="@major.MajorId">حذف</a></button>


                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>
